/* pages/home/index.wxss */
.content {
  /* padding: 10px; */
  /* width: 100%; */
  position: relative;
  box-sizing: border-box;
}
.clear {
  clear: both;
}
.search-box {
  width: 100%;
  text-align: center;
}
.search {
  width: 80%;
  padding: 10rpx;
  background: #f8f8f8;
  border-radius: 50rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 14px;
  padding-left: 5px;
  margin: 0 20rpx;
}
.search .city {
  display: inline-block;
  border-right: 1px solid #aaaaaa;
  /* padding-right: 10px; */
  padding-left: 10px;
  /* margin: 0 10px; */
  width: 20%;
  text-align: center;
  box-sizing: border-box;
}
.search .city .tubiao {
  border: 13rpx solid transparent;
  display: inline-block;
  margin-left: 8rpx;
  border-top-color: #000;
}
.search .search-item {
  display: inline-block;
  text-align: center;
  width: 80%;
}
.work {
  padding: 10px;
  /* height: 240px; */
  /* background: pink; */
   margin-top: 10px;
   /* margin-bottom: 20px; */
}
.work .work-left {
  float: left;
  width: 64%;
  padding-right: 3%;
  height: 100%;
}
.work .work-left image {
  height: 220rpx;
  width: 100%;
}
.work .work-left .work-l-t {
  width: 100%;
  padding-bottom: 10px;
  height: 50%;
  box-sizing: border-box;
 
}
.work .work-left .work-l-t image {
  height: 100%;
}
.work .work-left .work-l-b {
  height: 50%;
}
.work .work-left .work-l-b navigator {
  display: inline-block;
  width: 48.5%;
  height: 100%;
}
.work .work-left .work-l-b navigator image {
  width: 100%;
  height: 100%;
  display: inline-block;
}
.work .work-left .work-l-b navigator:first-child {
  padding-right: 3%;
}
.work .work-right {
  float: left;
  width: 33%;
}
.work .work-right image {
  width: 100%;
}

/*推荐*/
.content1 {
  padding: 10px;
  height:35px;
  font-size: 14px;
}
.content1 .content1-left {
  float: left;
  display: inline-block;
}
.content1 .content1-right {
  float: right;
}
.content1 .content1-right .saixuan {
  display: inline-block;
  float: right;
}
.content1 .content1-right image {
  width: 50rpx;
  height: 50rpx;
  float: right;
  display: inline-block;
}

.content2 {
  width: 100%;
  box-shadow:0px 5px 4px #f1f0ec;
  padding-bottom: 10px;
}
.content2 .box {
  width: 25%;
  display: inline-block;
  text-align: center;
}
.content2 .content2-item {
  border: 1px solid #cccccc;
  width: 80%;
  padding: 5px 8px;
  text-align: center;
  display: inline-block;
  box-sizing: border-box;
  font-size: 10px;
  border-radius: 8px;
  margin-bottom: 10px;
}
.content2 .content2-item.active {
  background-color: #fe9900;
  color: #fff;
}

.content3 {
  border-bottom: 1px solid #f1f0ec;
  display: flex;
  margin-top: 15px;
  padding-bottom: 15px;
}
.content3 .content3-item {
  flex: 1;
  text-align: center;
  font-size: 14px;
}
.content3 .content3-item .active {
  border-bottom: 2px solid #fe9900;
  display: inline-block;
  padding-bottom: 3px;
}

.content4 {
  padding: 0 10px 0 10px;
  padding-top: 20px;  
  height: 130px;
  border-bottom: 15px solid #f1f1f1;
  position: relative;
}
.content4 .img {
  position: absolute;
  top: 0;
  right: 0;
}
.content4 .img image {
  width: 80rpx;
}
.content4 .content4-top {
  height: 85px;
  margin-bottom: 5px;
}
.content4 .content4-top .left {
  float: left;
}
.content4 .content4-top .left image {
  width: 80px;
  height: 80px;
}
.content4 .content4-top .center {
  float: left;
  margin-left: 10px;
}
.content4 .content4-top .center .text1 {
  font-weight: bold;
  
}
.content4 .content4-top .center .text2 {
  color: #ff6a00;
  font-weight: bold;
  line-height: 40px;

}
.content4 .content4-top .center .text3 {
  color: #afafaf;

}
.content4 .content4-top .right {
  float: right;
  vertical-align: middle;

}
.content4 .content4-top .right .enroll {
  border: 1px solid #ff9800;
  color: #ff9800;
  padding: 10px 20px;
  border-radius: 20px;
  margin-top: 20px;
  
}
.content4 .content4-bottom {
  font-size: 14px;
}
.content4 .content4-bottom .left {
  background: #f5f5f5;
  display: inline-block;
  float: left;
  color: #8a8a8a;
  padding: 3px 5px;
  border-radius: 6px;
} 
.content4 .content4-bottom .right {
  display: inline-block;
  float: right;
  color: #8a8a8a;
}
.content4 .clera {
  clera:bold;
}

/* 筛选 */
.screen {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  /* padding-right: 10px； */
  display: none;
  background-color: #fff;
  box-sizing: border-box;
  padding: 0 10px;
}
.screen.active {
  display: block;
}
.screen .scroll {
  height: 250px;
  /* background-color:pink; */
  /* padding-right: 10px; */
}
.screen .scroll .screen-item .name{
  font-weight: bold;
  margin:10px 0 20px 0;
}
.name-item .box {
  width: 25%;
  text-align: center;
  display: inline-block;
}
.name-item .box .box-item {
  width: 90%;
  text-align: center;
  border: 1px solid #afafaf;
  padding: 5px 0;
  border-radius: 5px;
  margin-bottom: 5px;
  font-size: 14px;
}
.name-item .box.active .box-item {
  background-color: pink;
}
.screen .bottom {
  border-top: 1px solid #cccccc;
}
.screen .bottom .reset {
  display: inline-block;
  width: 30%;
  text-align: center;
  height: 40px;
  line-height: 40px;
}
.screen .bottom .confirm {
  display: inline-block;
  width: 70%;
  background-color: #ff6a00;
  text-align: center;
  height: 40px;
  line-height: 40px;
}

.bgc {
  position:absolute;
  top: 0;
  left: 0;
  right: 0;
  display: none;
  height: 900px;
  width: 100%;
  background-color: rgba(0, 0, 0, .3);
}
.bgc.active {
  display: block;
}