}
.iconfont.icon-qiuzhi {
  font-size: 90rpx;
  color: red;
}
.iconfont.icon-lianxikefu {
  font-size: 90rpx;
  color: red;
}
.iconfont.icon-shandian {
  font-size: 90rpx;
  color: red;
}
.content1 {
  margin: 0 15px;
  margin-bottom: 20px;
  
}
.content1 .img {
  display: inline-block;
}
.content1 .img image {
  width: 65px;
  height: 65px;
}
.content1 .info {
  display: inline-block;
  margin-left: 20px;
}
.content1 .info .info1 text {
  font-weight: bold;
  display: inline-block;
  vertical-align: middle;
}
.content1 .info .info1 image {
  width: 20px;
  height: 20px;
  vertical-align: middle;
}
.content1 .info .info2 text {
  font-size: 14px;
  display: inline-block;
  vertical-align: middle;
}
.content1 .info .info2 image {
  width: 20px;
  height: 20px;
  vertical-align: middle;
}
.content1 .info-item {
  float: right;
}
.content1 .info-item text{
  font-size: 14px;
  display: inline-block;
  vertical-align: middle;
}
.content1 .info-item image {
  width: 20px;
  height: 20px;
   vertical-align: middle;
}

.content1 .clear {
  clear: both;
}

.content2 {
  margin: 0 15px;
  background-color: #feac00;
  display: flex;
  padding: 20px 25px;
  border-radius: 10px;
}
.content2 .content2-item {
  flex: 1;
}
.content2 .content2-item .img {
  text-align: center;
}
.content2 .content2-item .img image {
  width: 30px;
  height: 30px;
}
.content2 .content2-item .text {
  width: 100%;
  text-align: center;
  font-size: 12px;
  color: #fff;
}


.content3 {
  padding: 0 15px;
  background-color: #fff;
  margin-bottom: 10px;
  border-bottom: 10px solid #f1f1f1;
  padding-bottom: 20px;

  
}
.content3 .top {
  padding: 15px 0; 
}
.content3 .top .t-left {
  display: line-block;
}
.content3 .top navigator {
  float: right;
}
.content3 .top .t-right {
  color: #686868;
  font-size: 12px;
  line-height:21px;
}
.content3 .bottom {
  display: flex;
}
.content3 .bottom .item {
  flex: 1;
}
.content3 .bottom .img {
  text-align: center;
}
.content3 .bottom .img image {
  width: 30px;
  height: 30px;
}
.content3 .bottom .text {
  text-align: center;
  font-size: 14px;
}


.content4 {
  padding-bottom: 3px;
  border-bottom: 10px solid #f1f1f1;
}
.content4 .item {
  margin: 0 15px;
  height: 60px;
  line-height: 60px;
}
.content4 .item .img {
  float: left;
  width: 20%;
  height: 60px;
}
.content4 .item .img image {
  width: 50px;
  height: 50px;
  padding-top: 5px;
}
.content4 .item .left {
  float: left;
  width: 80%;
  border-bottom: 1px solid #eeeeee;
}
.content4 .item .left text:nth-child(1) {
  float: left;
}
.content4 .item .left text:nth-child(2) {
  float: right;
  color: #dddddd;
}
.content4 .item .left text:nth-child(3) {
  float: right;
  font-size: 12px;
  color: #666666;
}